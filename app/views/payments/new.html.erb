<h1>Purchase of teddy <%= @car.sku %></h1>
<%= form_tag car_payments_path(@car) do %>
  <article>
    <label class="amount">
      <span>Price: <%= humanized_money_with_symbol(@car.price) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Teddy"
    data-email="<%= current_user.email %>"
    data-description="Teddy <%= @car.sku %>"
    data-amount="<%= @car.amount_cents %>"
    data-currency="<%= @car.amount.currency %>"></script>

<% end %>
